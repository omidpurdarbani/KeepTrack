@model KeepTrack.Core.DTOs.DeleteUserViewModel
@{
    ViewBag.Title = "حذف کاربر";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف کاربر</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                اطلاعات کاربر
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label>نام : </label>
                    <input type="text" disabled class="form-control" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label>ایمیل : </label>
                    <input type="email" disabled class="form-control" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label>نقش : </label>
                    <h3>@Model.RoleName</h3>
                </div>
            </div>
        </div>
    </div>
    <form method="post">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-size: 2rem">
                    حذف کاربر
                </div>
                <div class="panel-body">
                    <div class="row col-md-12">
                        <p style="text-align: center">
                            <input style="font-size: 2rem; width: 60%;" type="submit" value="حذف" class="btn btn-danger" />
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
